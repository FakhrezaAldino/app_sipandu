# ===========================================
# Database Configuration
# ===========================================
# PostgreSQL connection string
# If using Docker Compose, use default values below
DATABASE_URL=postgresql://pkh_user:pkh_secret123@localhost:5432/pkh_db

# Docker Compose PostgreSQL settings (optional, uses defaults if not set)
POSTGRES_USER=pkh_user
POSTGRES_PASSWORD=pkh_secret123
POSTGRES_DB=pkh_db

# ===========================================
# Server Configuration
# ===========================================
PORT=3001
NODE_ENV=development

# ===========================================
# Better Auth Configuration
# ===========================================
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET=dev-secret-change-in-production-abc123xyz789
BETTER_AUTH_URL=http://localhost:3001

# ===========================================
# CORS Configuration
# ===========================================
# Frontend URL for CORS (Vite default)
FRONTEND_URL=http://localhost:5173
